@model ContosoUniversity.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0 text-center">Student Details</h2>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-end fw-bold">
                    @Html.DisplayNameFor(model => model.LastName):
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.LastName)
                </dd>

                <dt class="col-sm-3 text-end fw-bold">
                    @Html.DisplayNameFor(model => model.FirstMidName):
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FirstMidName)
                </dd>

                <dt class="col-sm-3 text-end fw-bold">
                    @Html.DisplayNameFor(model => model.EnrollmentDate):
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.EnrollmentDate)
                </dd>
            </dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Enrollments)
            </dt>
            <dd class="col-sm-10">
                <table class="table">
                    <tr>
                        <th>Course Title</th>
                        <th>Grade</th>
                        @foreach (var item in Model.Enrollments)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Course.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                            </tr>
                        }
                    </tr>
                </table>

            </dd>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-warning me-2">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
